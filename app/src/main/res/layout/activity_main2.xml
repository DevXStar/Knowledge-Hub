<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview1"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="@color/teal_200" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/android" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview2"
        android:layout_marginTop="60dp"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"

        android:layout_toEndOf="@id/Cardview1"
        app:cardBackgroundColor="@color/teal_200" >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/web" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview3"
        android:layout_width="180dp"
        android:layout_marginHorizontal="17dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/Cardview1"
        app:cardBackgroundColor="@color/teal_200" >


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ios" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview4"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/Cardview2"
        android:layout_toEndOf="@id/Cardview3"
        app:cardBackgroundColor="@color/teal_200" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ml" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview5"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/Cardview3"
        app:cardBackgroundColor="@color/teal_200" >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/blockchain" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview6"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Cardview4"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@id/Cardview5"
        app:cardBackgroundColor="@color/teal_200" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ai" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview7"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_below="@id/Cardview6"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="20dp">

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/dblue"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="20dp"

            />
    </androidx.cardview.widget.CardView>
</RelativeLayout>